<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#9A0BDC">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="482dp"
            android:layout_height="49dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/curtin"
            app:layout_constraintHorizontal_bias="0.507"
            android:id="@+id/linearLayout"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:id="@+id/btnAtt" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="1dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/att"/>
    <Button
            android:layout_width="61dp"
            android:layout_height="46dp"
            android:id="@+id/btnVoltar" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="1dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/esquerda"/>
    <Button
            android:layout_width="61dp"
            android:layout_height="45dp"
            android:id="@+id/btnAvancar"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/btnVoltar"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/direitauuuu"/>
    <Button
            android:layout_width="63dp"
            android:layout_height="46dp"
            android:id="@+id/btnHome" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="5dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/edtLink" android:layout_marginEnd="5dp"
            android:background="@drawable/rarararapp"/>
    <Button
            android:layout_width="60dp"
            android:layout_height="43dp"
            android:id="@+id/btnIr" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edtLink" android:layout_marginStart="5dp"
            android:background="@drawable/direita"/>
    <EditText
            android:layout_width="193dp"
            android:layout_height="43dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/edtLink" android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@+id/btnIr" app:layout_constraintStart_toEndOf="@+id/btnHome"
            android:layout_marginStart="5dp" android:background="@android:color/background_light"
            android:hint="Digite o URL"/>
    <WebView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/edtLink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/wvFrancis" android:layout_marginTop="5dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"/>
</android.support.constraint.ConstraintLayout>